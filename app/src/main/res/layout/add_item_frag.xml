<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/add_item_frag">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:elevation="13dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
            <EditText
                android:layout_width="190dp"
                android:layout_height="60dp"
                android:id="@+id/add_item_input"
                android:gravity="bottom"
                android:textSize="20sp"
                android:fontFamily="Roboto"
                style="@style/AppTheme"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/add_item_btn"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@color/addButton"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/add_item_title"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/add_item_input"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="Roboto"
                android:background="@color/dialogColor"
                android:textColor="@color/dialogText"/>
    </RelativeLayout>
</RelativeLayout>